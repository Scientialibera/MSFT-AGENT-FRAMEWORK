# Azure OpenAI Configuration (required for agent)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_CHAT_DEPLOYMENT=your-deployment-name

# Agent Mode (optional, default: "full")
# "full" - Uses both fabric_data (inline) and sql_to_csv (export) tools
# "csv_only" - Uses only sql_to_csv tool for all queries
AGENT_MODE=full

# Microsoft Fabric SQL Endpoint Configuration (required for fabric_data and sql_to_csv tools)
FABRIC_SQL_SERVER=your-workspace.datawarehouse.fabric.microsoft.com
FABRIC_SQL_DATABASE=your-database-name
FABRIC_SQL_DRIVER=ODBC Driver 18 for SQL Server

# Query Result Limits (optional, has defaults)
MAX_ROWS_INLINE=100

# Azure Blob Storage Configuration (required for sql_to_csv tool)
AZURE_STORAGE_ACCOUNT=your-storage-account-name
AZURE_STORAGE_CONTAINER=fabric-exports
CSV_SAS_EXPIRY_HOURS=24

# MCP Server Configuration (optional, default: false)
ENABLE_MCP_SERVER=false
